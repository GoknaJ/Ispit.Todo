@model Ispit.Todo.Models.Todolist

<h2>TODO List Details</h2>

<div>
    <h3>@Model.Name</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Task Name</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model.TodoTasks)
            {
                if (task.Status == false)
                {
                    <tr>
                        <td>@task.Name</td>
                        <td>@task.Status</td>
                        <td>
                            <a asp-action="Edit" asp-controller="TodoTasks" asp-route-id="@task.Id" class="btn btn-warning">Edit</a> |
                            <a asp-action="Delete" asp-controller="TodoTasks" asp-route-id="@task.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <a asp-action="Create" asp-controller="TodoTasks" asp-route-todolistId="@Model.Id" class="btn btn-primary">Add Task</a>
</div>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
